<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="MySuite" parallel="classes" thread-count="4" >
	<listeners>
		<listener class-name="com.opencart.qa.utils.ExtentReporterManager" />
	</listeners>
	<test name="ChromeTest">
		<parameter name="browser" value="chrome"></parameter>
		<groups>
			<run>
				<include name="Regression" />
				<include name="Smoke" />
			</run>
		</groups>
		<classes>
			<class name="com.opencart.qa.tests.LoginTest" />
			<class name="com.opencart.qa.tests.HomePageTest" />
			<class name="com.opencart.qa.tests.RegistrationPageTest" />
			<class name="com.opencart.qa.tests.LoginPageNegativeTests" />
		</classes>
	</test>
</suite>